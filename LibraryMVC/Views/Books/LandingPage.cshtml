@model LibraryMVC.Models.Book
@{
    
    Layout = null;
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Title - @Model.Author.Name</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
       
        body {
            position: relative;
            padding-top: 56px; 
        }
        .hero-section {
            padding: 100px 0;
            background-color: #f8f9fa;
        }
        section {
            padding: 60px 0;
        }
    </style>
</head>
<body data-bs-spy="scroll" data-bs-target="#navbar-example">

    <nav id="navbar-example" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">@Model.Title</a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="#about">Про книгу</a></li>
                <li class="nav-item"><a class="nav-link" href="#author">Про автора</a></li>
                <li class="nav-item"><a class="nav-link" href="#genres">Жанри</a></li>
            </ul>
        </div>
    </nav>

    <header class="hero-section text-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <img src="@Model.PhotoPath" class="img-fluid rounded shadow" alt="Обкладинка книги @Model.Title">
                </div>
                
                <div class="col-md-8 text-start">
                    <h1 class="display-4">@Model.Title</h1>
                    <p class="lead">Автор: @Model.Author.Name</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Повернутись на головну</a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (ViewBag.IsFavorite == true)
                        {
                            
                            <form asp-controller="Books" asp-action="RemoveFromFavorites" method="post" style="display:inline;">
                                <input type="hidden" name="bookId" value="@Model.Id" />
                                <button type="submit" class="btn btn-danger" title="Видалити з обраного">
                                    <i class="bi bi-heart-fill"></i> В обраному
                                </button>
                            </form>
                        }
                        else
                        {
                            
                            <form asp-controller="Books" asp-action="AddToFavorites" method="post" style="display:inline;">
                                <input type="hidden" name="bookId" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-danger" title="Додати в обране">
                                    <i class="bi bi-heart"></i> Додати в обране
                                </button>
                            </form>
                        }
                    }
                </div>
            </div>

        </div>
    </header>

    <section id="about" class="container">
        <h2>Про книгу</h2>
        <hr>
        <p>
            @Model.Description
        </p>
    </section>

    <section id="author" class="bg-light">
        <div class="container">
            <h2>Про автора</h2>
            <hr>
            <div class="row align-items-center">
                <div class="col-md-3">
                    <img src="@Model.Author.PhotoPath" class="img-fluid rounded-circle" alt="Фото автора @Model.Author.Name">
                </div>
                <div class="col-md-9">
                    <h4>@Model.Author.Name</h4>
                    <p>@Model.Author.Biography</p>
                    <a asp-controller="Authors" asp-action="LandingPage" asp-route-id="@Model.Author.Id" class="btn btn-outline-dark">Дізнатись більше про автора</a>
                </div>
            </div>
        </div>
    </section>

    <section id="genres" class="container">
        <h2>Жанри</h2>
        <hr>
        <div>
            @if (Model.Genres != null && Model.Genres.Any())
            {
                foreach (var genre in Model.Genres)
                {
                    <span class="badge bg-primary fs-5 me-2">@genre.Name</span>
                }
            }
            else
            {
                <p>Жанри не вказані.</p>
            }
        </div>
    </section>

    <footer class="footer bg-dark text-white text-center py-3 fixed-bottom">
        <div class="container">
            <span>Контакти: library@example.com | (044) 123-45-67</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
