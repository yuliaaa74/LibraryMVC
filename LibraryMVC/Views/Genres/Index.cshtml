@model IEnumerable<LibraryMVC.Models.Genre>

@{
    ViewData["Title"] = "Жанри";
}

<h1 class="mb-4">Жанри</h1>

@* Кнопка "Створити" видима тільки для Адміна *@
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-success">Створити жанр</a>
    </p>
}

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        Ще не додано жодного жанру.
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create">Створити перший?</a>
        }
    </div>
}
else
{
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Назва</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-nowrap" style="width: 1%;">
                        <div class="btn-group btn-group-sm" role="group">

                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Деталі</a>

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Редагувати</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
