@model LibraryMVC.Models.Author

@{
    ViewData["Title"] = "Редагування";
}
<h1>Редагування</h1>
<h4>Автор</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <input type="hidden" asp-for="PhotoPath" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Ім'я</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Нове фото</label>

                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                {
                    <div class="mb-2">
                        <img src="@Model.PhotoPath" alt="Поточне фото" style="max-width: 150px; max-height: 150px;" class="img-thumbnail" />
                    </div>
                }

                <input type="file" name="photoFile" class="form-control" accept="image/*" />
                <small class="form-text text-muted">Завантажте новий файл, щоб замінити поточне фото.</small>
            </div> <div class="form-group">
                <label asp-for="Birthplace" class="control-label">Місце народження</label>
                <input asp-for="Birthplace" class="form-control" />
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Latitude" class="control-label">Широта</label>
                        <input asp-for="Latitude" class="form-control" type="number" step="any" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Longitude" class="control-label">Довгота</label>
                        <input asp-for="Longitude" class="form-control" type="number" step="any" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Biography" class="control-label">Біографія</label>
                <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
